- content_for :page_title, "Sign up"

.flex.flex-col.gap-5.items-center.justify-center.h-screen.w-screen
	.w-96.h-auto.bg-gray-800.border-t-4.border-green-400.rounded-md.p-7.text-white
		= render "shared/alert"
		= render "shared/notice"

		%h2.text-2xl.mb-6.ml-1.font-heading Sign up

		= form_with do |form|
			= form.email_field :email, placeholder: "Email", class: "input mb-6", autofocus: true, required: true, value: @prefill_email

			.flex.justify-between.items-center
				= form.submit "Continue", class: "btn"
	.w-96.text-left.text-gray-500
		%a.text-gray-500(href="/") ‚Üê Home
